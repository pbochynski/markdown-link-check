        "/telemetry-manager/": "https://raw.githubusercontent.com/kyma-project/telemetry-manager/main/docs/",
        "/istio/": "https://raw.githubusercontent.com/kyma-project/istio/main/docs/",
        "/nats-manager/": "https://raw.githubusercontent.com/kyma-project/nats-manager/main/docs/",
        "/eventing-manager/": "https://raw.githubusercontent.com/kyma-project/eventing-manager/main/docs/",
        "/api-gateway/": "https://raw.githubusercontent.com/kyma-project/api-gateway/main/docs/"
